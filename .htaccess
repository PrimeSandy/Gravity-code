RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove index.html from URLs
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^(.*)index\.html$ /$1 [R=301,L]

# Force trailing slash for directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+[^/])$ /$1/ [R=301,L]

# Force correct case URLs (lowercase to proper case)
RewriteRule ^word-counter/?$ /Word-counter/ [R=301,L]
RewriteRule ^password-generator/?$ /Password-generator/ [R=301,L]
RewriteRule ^text-case-converter/?$ /Text-Case-Converter/ [R=301,L]
RewriteRule ^base64-encode-decode/?$ /Base64-Encode-Decode/ [R=301,L]
RewriteRule ^e-trax-files/?$ /E-trax-files/ [R=301,L]
